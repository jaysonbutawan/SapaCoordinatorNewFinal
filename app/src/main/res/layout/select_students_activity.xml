<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HospitalComponents.TimeSlotsComponents.SelectStudentActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Training Slots"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select students for booking"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Slot Availability -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvSlotCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/10"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:background="@drawable/logo"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"/>
    </LinearLayout>

    <!-- Remaining Slots -->
    <TextView
        android:id="@+id/tvRemainingSlots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 slots remaining"
        android:textSize="14sp"
        android:textColor="@color/gray_600"
        android:layout_marginBottom="16dp"/>

    <!-- Selected Students Section Header -->
    <TextView
        android:id="@+id/tvSelectedStudentsCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Students (0)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Available Students Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Students"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap to select students for the training session"
        android:textSize="12sp"
        android:textColor="@color/gray_600"
        android:layout_marginBottom="8dp"/>

    <!-- Available Students List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAvailableStudent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"/>

    <!-- Selection Summary -->
    <TextView
        android:id="@+id/tvSelectionSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No students selected"
        android:textSize="14sp"
        android:textColor="@color/gray_600"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinueBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue to Final Booking"
        android:enabled="false"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="8dp"/>

</LinearLayout>